{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "jsx": "react",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "src/example/*",
    "src/components/*.test.tsx",
    "src/lib/*.test.ts",
    "src/testutils/*",
    "node_modules"
  ]
}
